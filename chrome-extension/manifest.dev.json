{
  "manifest_version": 3,
  "name": "Lotview Auto Poster (Dev)",
  "description": "Auto-fill Facebook Marketplace listings from Lotview inventory. DEVELOPMENT BUILD.",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "downloads", "cookies"],
  "host_permissions": [
    "https://www.facebook.com/marketplace/create/*",
    "https://www.facebook.com/marketplace/you/selling*",
    "https://lotview.ai/*",
    "https://*.lotview.ai/*",
    "https://olympicautogroup.ca/*",
    "https://*.olympicautogroup.ca/*",
    "https://replit.app/*",
    "https://*.replit.app/*",
    "https://*.replit.dev/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lotview Auto Poster (Dev)"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/create/*",
        "https://www.facebook.com/marketplace/you/selling*"
      ],
      "js": ["content-facebook.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
