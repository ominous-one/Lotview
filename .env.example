# Olympic Auto Group - Dealership Management Platform
# Environment Variables Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Core Configuration
# =============================================================================

# Database (PostgreSQL) - Required for all functionality
DATABASE_URL=postgresql://user:password@host:5432/database
PGHOST=your-db-host
PGPORT=5432
PGUSER=your-db-user
PGPASSWORD=your-db-password
PGDATABASE=your-db-name

# Authentication Secret - Required for JWT signing (min 32 characters)
# IMPORTANT: The server reads JWT_SECRET. SESSION_SECRET is kept for backwards compatibility.
JWT_SECRET=your-secure-random-string-minimum-32-characters-long
SESSION_SECRET=your-secure-random-string-minimum-32-characters-long

# =============================================================================
# RECOMMENDED - AI & Email Integration
# =============================================================================

# OpenAI - Required for AI chat, vehicle descriptions, call analysis
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# Resend - Required for transactional emails (password reset, invitations)
RESEND_API_KEY=re_your-resend-api-key

# =============================================================================
# OPTIONAL - Third Party Integrations
# =============================================================================

# Facebook Marketplace Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=https://your-domain.com/api/facebook/callback

# MarketCheck - Vehicle pricing data
MARKETCHECK_API_KEY=your-marketcheck-api-key

# Apify - Web scraping fallback
APIFY_API_KEY=your-apify-api-key

# Browserless - Cloud browser for scraping
BROWSERLESS_API_KEY=your-browserless-api-key

# GoHighLevel CRM Integration
GHL_CLIENT_ID=your-ghl-client-id
GHL_CLIENT_SECRET=your-ghl-client-secret

# Gemini - Alternative AI provider
GEMINI_API_KEY=your-gemini-api-key

# ScrapingBee - Scraping fallback
SCRAPINGBEE_API_KEY=your-scrapingbee-api-key

# ZenRows - Scraping fallback
ZENROWS_API_KEY=your-zenrows-api-key

# Zyte - Scraping fallback
ZYTE_API_KEY=your-zyte-api-key

# Chrome Extension HMAC signing secret (shared between server and extension)
EXTENSION_HMAC_SECRET=your-extension-hmac-secret-minimum-32-characters

# =============================================================================
# OPTIONAL - Monitoring & Error Tracking
# =============================================================================

# Sentry DSN for error tracking (leave blank to disable)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Redis (optional - for future session store / caching)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# LOGGING & DEVELOPMENT
# =============================================================================

# Log format: "json" for structured production logs, "pretty" for dev (default: json in production)
# LOG_FORMAT=pretty

# Log level: debug | info | warn | error (default: info)
# LOG_LEVEL=info

# Enable debug logging
DEBUG=false

# Scheduler (set to false to disable background jobs in development)
SCHEDULER_ENABLED=true

# Node environment
NODE_ENV=development

# Server port (defaults to 5000)
PORT=5000
